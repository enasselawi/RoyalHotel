@model RoyalHotel.Models.DashboardViewModel
@{
    ViewData["Title"] = "Tables";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


   <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Users Table</h6>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">First Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Phone</th>
                                    </tr>
                                </thead>
                                <tbody>
                        
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                            </tr>
                        }
                       
                               
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Reservation Table</h6>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                       
                                        <th scope="col">User Name</th>
                                        <th scope="col">Hotel Name</th>
                                        <th scope="col">Total Price </th>
                            <th scope="col">Payents Status </th>
                            <th scope="col">Date </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model.Reservations)
                        {

                            <tr>

                                <td>@item.User.FirstName</td>
                                <td>@item.Hotel.Name</td>
                                <td>@item.TotalPrice</td>
                                <td>@item.PaymentStatus</td>
                                <td>@item.ReservationDate</td>
                            </tr>
                        }

                                    
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Reservation details Table</h6>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        
                                        <th scope="col">Roome Id</th>
                            <th scope="col">Hotel Name</th>
                                        <th scope="col">Check in </th>
                                        <th scope="col">check out </th>
                            <th scope="col">Room Price  </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model.ReservationDetails)
                        {
                            <tr>

                                <td>@item.RoomId</td>
                                <td>@item.Room.Hotel.Name</td>
                                <td>@item.CheckInDate</td>
                                <td>@item.CheckOutDate</td>
                                <td>@item.RoomPrice</td>
                            </tr>
                        }
                       
                                   
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Hotels Table</h6>
                            <table class="table table-dark">
                                <thead>
                                    <tr>
                                       
                                        <th scope="col"> Name</th>
                                        <th scope="col">Location</th>
                                        <th scope="col">Contact</th>
                           
                                    </tr>
                                </thead>
                                <tbody>
                        @foreach (var item in Model.Hotels)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Location</td>
                                <td>@item.Contact</td>
                           
                            </tr>
                        }
                                   
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Rooms Table</h6>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        
                                        <th scope="col">Hotel Name</th>
                                        <th scope="col">Room Type</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Capacity</th>
                                         <th scope="col">Booked </th>
                                    </tr>
                                </thead>
                                <tbody>
                        @foreach (var item in Model.Rooms)
                        {
                            <tr>
                               
                                <td>@item.Hotel.Name</td>
                                <td>@item.RoomType</td>
                                <td>@item.Price</td>
                                <td>@item.Capacity</td>
                                <td>@item.Booked</td>
                            </tr>
                        }
                        
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>



        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Contact us sub Table</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col"> Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Subject</th>
                            <th scope="col">Message</th>
                            <th scope="col">Submission Date</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Contactformsubmissions)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Subject</td>
                                <td>@item.Message</td>
                                <td>@item.SubmissionDate</td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>




























                </div>
          
         