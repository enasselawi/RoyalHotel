@model RoyalHotel.Models.ViewModels.SearchViewModel
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h1 style="color: red;">Search</h1>
<div class="booking_online" style="background-color: #f8d7da; padding: 30px; border-radius: 10px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="book_room" style="background-color: white; padding: 20px; border-radius: 10px; box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);">
                    <h1 style="color: red; text-align: center;">Book a Room Online</h1>
                    <form asp-controller="Booking" asp-action="Search" method="post">
                        <div class="form-group">
                            <label for="CheckInDate" style="color: red;">Check-In Date:</label>
                            <input type="date" asp-for="CheckInDate" class="form-control" style="border: 1px solid red;" />
                        </div>
                        <div class="form-group">
                            <label for="CheckOutDate" style="color: red;">Check-Out Date:</label>
                            <input type="date" asp-for="CheckOutDate" class="form-control" style="border: 1px solid red;" />
                        </div>
                        <button type="submit" class="btn btn-danger btn-block" style="background-color: red; border: none; color: white;">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
